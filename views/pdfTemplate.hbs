<div class="table-container">
            <table>
                <thead id="itemsContainer">
                    <tr>
                        <th>Description</th>
                        <th>Quantity</th>
                        <th>Rate</th>
                        <th>Amount</th>
                    </tr>
                </thead>
                <tbody id="itemsContainer">
                    {{#each invoiceData.items}}
                    <tr>
                        <td>{{this.description}}</td>
                        <td>{{this.quantity}}</td>
                        <td>{{this.rate}}</td>
                        <td>{{this.amount}}</td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>




      <div style="display: flex; justify-content: space-between; margin-left: 200px; margin-top:10px;">
        <div style="text-align: left">
          <p><strong>Subtotal:</strong></p>
          <p><strong>Total:</strong></p>
          <p style="text-align: center; background-color: gray; ">
        
              <strong
              id="paymentStatus" >
                Balance:
                </strong>
        
        
          </p>
        </div>


        <div style="text-align: right ">
          <p><span id="subtotal">{{invoiceData.subtotal}}</span></p>
          <p><span id="total">{{invoiceData.total}}</span></p>
          <p><span id="total " style="margin-top:7px;">{{invoiceData.total}}</span></p>
        </div>


      </div>
      <div style="margin-top:10px;">
        <p><strong >Invoice Notes:</strong></p>
        <p><span id="notes">{{invoiceData.notes}}</span></p>
      </div>
      <hr />
    
      <div style="display: flex; margin-top:10px;">
        <p><strong>Email:</strong>
        <p><span id="email">{{businessData.email}}</span></p>
        </p>
      </div>
      <div><span style="display:flex; justify-content:center; margin-top:30px;">Powered By AccellionX</span></div>


    </div>


  
    </div>
    </div>


  </body>
</html>
